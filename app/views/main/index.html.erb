<div class="container">
	<h1 id="brand" class="text-center bowlby">Your free Dj Assistant</h1>
	<% if @current_user.nil? or not @current_user.email? %>
	<div class="row step">
		<p class="text-center">
			<span class="circle">1</span>Connect your accounts
		</p>
		<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-4">
			<% if not @current_user.nil? and @current_user.spotify_connected %>
				<a class="text-center primary-btn green" href="<%= @request_spotify_authorization_url %>">
					Spotify <small>(Connected)</small>
				</a>
			<% else %>
				<a class="text-center primary-btn not-connected" href="<%= @request_spotify_authorization_url %>">
					Spotify <small class="text-muted">(Not Connected)</small>
				</a>
			<% end %>
			<a id="soundcloud_login" class="text-center primary-btn">
				Soundcloud <small class="text-muted">(Coming soon!)</small>
			</a>
		</div>
	</div>
	<div class="row step">
		<p class="text-center">
			<span class="circle">2</span>Enter email
		</p>
		<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-4">
			<div class="form-group form-group-lg">
				<input type="email" name="email" class="form-control" placeholder="Email" aria-describedby="help_block" />
				<span id="help_block" class="help-block" style="display:none;"><strong>Please enter an email</strong></span>
				<a id="submit_btn" class="text-center primary-btn blue">
					Sign Up
				</a>
			</div>
		</div>
	</div>
	<div class="row step last-row">		
		<p class="text-center">
			<span class="circle">3</span>Receive a weekly list of the songs you save or like
		</p>
		<div class="text-center images">
			<%= image_tag("spsave.png", :class => "img-circle img-thumbnail") %>
			<%= image_tag("sclike.png", :class => "img-circle img-thumbnail") %>
		</div>
	</div>
	<% else %>
	<div class="row last-row">
		<p class="text-center lead">
			Hi <strong><%= @current_user.display_name %></strong>! You have now connected DJ Assistant with your Spotify account.
		</p>
		<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-4">
			<a id="disconnect" class="text-center primary-btn red" href="/unsubscribe">
				Disconnect
			</a>
		</div>
	</div>
	<% end %>
</div>
