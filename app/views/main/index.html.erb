<div class="background">
	<div class="mask">
		<h1 id="brand" class="text-center bowlby">Your free Dj Assistant</h1>
		<div class="container">
			<div class="row">
				<p class="text-center lead">
					Get emails with the songs you save/like in Spotify and Soundcloud.
				</p>
				<div class="col-xs-offset-2 col-xs-8 col-md-offset-4 col-md-4">
					<% if @current_user.nil? %>
						<a id="spotify_login" class="text-center primary-btn" href="<%= @request_spotify_authorization_url %>">
							Sign Up
						</a>
					<% else %>
						<p class="text-center lead">Hi <strong><%= @current_user.display_name %></strong>! You have now connected DJ Assistant with your Spotify account.</p>
						<a id="disconnect" class="text-center primary-btn" href="/unsubscribe">Disconnect</a>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>