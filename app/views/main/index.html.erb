<div class="container">
	<h1 id="brand" class="text-center bowlby">Your free Dj Assistant</h1>
	<div class="row step">
		<% if @current_user.nil? %>
			<p class="text-center">
				<span>1</span>Connect your accounts
			</p>
			<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-4">
				<a id="spotify_login" class="text-center primary-btn not-connected" href="<%= @request_spotify_authorization_url %>">
					Spotify <small class="text-muted">(Not Connected)</small>
				</a>
				<a class="text-center primary-btn">
					Soundcloud <small class="text-muted">(Coming soon!)</small>
				</a>
			</div>
		<% else %>
			<p class="text-center lead">
				Hi <strong><%= @current_user.display_name %></strong>! You have now connected DJ Assistant with your Spotify account.
			</p>
		<% end %>
	</div>
	<div class="row step">
		<p class="text-center">
			<span>2</span>Save and like songs
		</p>
		<div class="text-center images">
			<%= image_tag("spsave.png", :class => "img-circle img-thumbnail") %>
			<%= image_tag("sclike.png", :class => "img-circle img-thumbnail") %>
		</div>
	</div>
	<div class="row step">
		<p class="text-center">
			<span>3</span>Get a weekly summary emails
		</p>
	</div>
	<div class="row last-row">
		<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-4">
			<% if @current_user.nil? %>
				<div class="form-group form-group-lg">
					<input type="text" class="form-control" placeholder="Email" />
				</div>
				<a id="spotify_login" class="text-center primary-btn blue" href="<%= @request_spotify_authorization_url %>">
					Sign Up
				</a>
			<% else %>
				<a id="disconnect" class="text-center primary-btn red" href="/unsubscribe">
					Disconnect
				</a>
			<% end %>
		</div>
	</div>
</div>
