<div class="banner">
	<h1 id="brand" class="text-center bowlby">Dj Assistant</h1>
</div>
<div class="container">
	<div class="row">
		<p class="text-center lead">
			Connect your Spotify and get weekly emails with the songs you added that week.
		</p>
		<div class="col-xs-12 col-md-offset-3 col-md-6">
			<% if @current_user.nil? %>
				<a id="spotify_login" class="text-center primary-btn" href="<%= @request_spotify_authorization_url %>">
					Connect To Spotify
				</a>
			<% else %>
				<p class="text-center lead">Hi <strong><%= @current_user.display_name %></strong>! You have now connected DJ Assistant with your Spotify account.</p>
				<!-- <a href="/logout">Log Out</a> -->
				<a id="disconnect" class="text-center primary-btn" href="/disconnect">Disconnect</a>
			<% end %>
		</div>
	</div>
</div>
